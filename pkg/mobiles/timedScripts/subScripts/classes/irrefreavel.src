program TimedScript_Clumsy(params)
	var mobile := params[1];
	var attacker := params[2];
	params := 0; // Not needed anymore.

	if ( GetObjProperty(mobile, "irrefreavel") )
		return 0;
	endif

	SetObjProperty(mobile, "irrefreavel", 60);
	var hitsmod := Cint(GetObjProperty(mobile, "hitsmod"));
