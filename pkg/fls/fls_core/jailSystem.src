use uo;
use os;
use cfgfile;

program jailkeeper()
	var relday;
	var elem;
	var act;
	var ppl;
	while(1)
		ppl := EnumerateOnlineCharacters();
		var accounts := ListAccounts();
		foreach account in accounts
			act := FindAccount(account);
			relday := act.getprop("releaseday");
			if (relday)
				if (ReadGameClock() >= CInt(relday))
					act.enable();
					act.setprop("releaseday", 0);
				endif
			endif
		endforeach
		sleep(3600);
	endwhile
endprogram
