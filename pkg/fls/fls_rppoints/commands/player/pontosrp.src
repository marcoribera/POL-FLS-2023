				return;
			elseif(chardata.Skills[skill] == 40 && AP_GetTrueSkill(who, skill) >= 100)
				SendSysMessageEx(who, "Voce nao pode mais aumentar esta skill.", SSM_FAIL);
				return;
			endif
			var true_skill := AP_GetTrueSkill(who, skill);
			var temp := true_skill+0.4;
