function makeRuneitems(who, what, amt, tool )


	if(!what)
		SendSysMessageEx(who, "Cancelado.", SSM_FAIL);
		return 0;
	endif



	var item := CraftItem(who, "Magery", tool, what, amt, 0, 0);
	return 1;


endfunction
